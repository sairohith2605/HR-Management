@model HRApplication.Models.HumanResource

@{
    ViewData["Title"] = "Register Resource";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>

</head>
<body>
    <div class="jumbotron text-center">
        <h4>Registration of new Human Resource</h4>
        <p class="lead">Please fill the form below to add a new resource.</p>
    </div>
    <form method="post" asp-action="Register">
        <div class="form-group row">
            <label asp-for="ResourceName" class="col-sm-2 col-form-label">Resource Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" asp-for="ResourceName" placeholder="Name of Resource" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" asp-for="Age" placeholder="Age" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" asp-for="Department" placeholder="Department" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Position" class="col-sm-2 col-form-label">Position</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" asp-for="Position" placeholder="Position in the Organization" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="JoiningDate" class="col-sm-2 col-form-label">Joining Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control form-control-sm" asp-for="JoiningDate" placeholder="Joining Date" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label">Gender</label>
            <div class="col-sm-10">
                <div class="col-sm-10">
                    <select class="form-control form-control-sm" asp-for="Gender">
                        <option>M</option>
                        <option>F</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HighestQualifications" class="col-sm-2 col-form-label">Highest Qualification</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" asp-for="HighestQualifications" placeholder="Highest Qualification" />
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="btn btn-info">Submit Details</button>
        </div>
    </form>
</body>
</html>
